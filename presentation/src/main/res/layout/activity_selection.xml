<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.brothersoft.bookofcountries.presentation.screens.selection.SelectionActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/Toolbar"/>

    </android.support.design.widget.AppBarLayout>
    <Button
        android:id="@+id/full_list_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green_effect_border"
        android:textSize="20dp"
        android:text="Full list"/>
    <Button
        android:id="@+id/region_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green_effect_border"
        android:textSize="20dp"
        android:text="Region"/>
    <Button
        android:id="@+id/language_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green_effect_border"
        android:textSize="20dp"
        android:text="Language"/>
    <Button
        android:id="@+id/currency_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green_effect_border"
        android:textSize="20dp"
        android:text="Currency"/>
    <Button
        android:id="@+id/regional_block_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green_effect_border"
        android:textSize="20dp"
        android:text="Regional block"/>
</LinearLayout>
